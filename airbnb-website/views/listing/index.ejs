
<% layout("/layouts/boilerplate") %>
<body>
    <h1>All Listing</h1>
    <!-- <form  method="get" action="/listings/new"><button>Create list</button></form> -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 ">
    <% for(let listing of alllist) {%>   
     
      <a href="/listings/<%=listing._id%>" class="link-list">
        <div class="card col" >
        <img src=<%= listing.image %> class="card-img-top" alt="listing_image" style="height: 20rem;" >
        <div class="card-img-overlay"></div>
       
        <div class="card-body">
          <p class="card-text"><%=listing.title %><br>
        &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>/night</p>
        </div>
      </div></a>
      <% } %>
    </div>

</body>
